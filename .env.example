# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=solana_trading_simulator

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Security
JWT_SECRET=your_jwt_secret_here
API_KEY_SECRET=your_api_key_secret_here
HMAC_SECRET=your_hmac_secret_here
MASTER_ENCRYPTION_KEY=your_encryption_key_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Legacy Initial Balances (for backward compatibility)
INITIAL_SOL_BALANCE=0
INITIAL_USDC_BALANCE=10000
INITIAL_USDT_BALANCE=0

# Multi-Chain Initial Balances
# Solana Virtual Machine (SVM) Balances
INITIAL_SVM_SOL_BALANCE=0
INITIAL_SVM_USDC_BALANCE=5000
INITIAL_SVM_USDT_BALANCE=0

# Ethereum Virtual Machine (EVM) Balances
INITIAL_EVM_ETH_BALANCE=0
INITIAL_EVM_USDC_BALANCE=5000
INITIAL_EVM_USDT_BALANCE=0

# Specific EVM Chain Balances (optional)
# Uncomment and set values to override the default EVM balances for specific chains
# ETH on Ethereum Mainnet
# INITIAL_ETH_ETH_BALANCE=0
# USDC on Ethereum Mainnet
# INITIAL_ETH_USDC_BALANCE=5000
# USDT on Ethereum Mainnet
# INITIAL_ETH_USDT_BALANCE=0

# Polygon Chain Tokens (optional)
# MATIC on Polygon
# INITIAL_POLYGON_MATIC_BALANCE=0
# USDC on Polygon
# INITIAL_POLYGON_USDC_BALANCE=5000

# Base Chain Tokens (optional)
# ETH on Base
# INITIAL_BASE_ETH_BALANCE=0
# USDC on Base
# INITIAL_BASE_USDC_BALANCE=5000

# EVM Chain Configuration
# Comma-separated list of EVM chains to query in order of priority
# Available chains: eth, polygon, bsc, arbitrum, optimism, avalanche, base, linea, zksync, scroll, mantle
EVM_CHAINS=eth,polygon,bsc,arbitrum,base,optimism,avalanche,linea

# Tokens
DEFAULT_TOKENS=So11111111111111111111111111111111111111112,EPjFWdd5AufqSSqeM2qN1xzybapC8G4wEGGkZwyTDt1v,Es9vMFrzaCERmJfrF4H2FYD4KCoNkY11McCe8BenwNYB

# Price cache duration in milliseconds
PRICE_CACHE_MS=60000 

# Portfolio snapshot interval in milliseconds (2 minutes by default)
PORTFOLIO_SNAPSHOT_INTERVAL_MS=120000 

# Trading Configuration
ALLOW_CROSS_CHAIN_TRADING=false  # Set to false to disable trades between different chains

# Price fetching using our primary provider
NOVES_API_KEY=your_noves_api_key_here